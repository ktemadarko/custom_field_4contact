{
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "plugins": [
    "@prettier/plugin-xml",
    "prettier-plugin-apex"
  ],
  "overrides": [
    {
      "files": "*.xml",
      "options": {
        "parser": "xml",
        "tabWidth": 4
      }
    },
    {
      "files": "*.{cls,trigger,apex}",
      "options": {
        "parser": "apex",
        "tabWidth": 4
      }
    }
  ]
}